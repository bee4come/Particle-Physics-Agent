# FeynmanCraft ADK Environment Configuration Template
# Copy this file to .env and update with your values

# ===========================================
# Google AI Configuration (REQUIRED)
# ===========================================
GOOGLE_API_KEY=your_google_api_key_here

# ===========================================
# Knowledge Base Configuration
# ===========================================
KB_MODE=local
DEFAULT_SEARCH_K=5

# ===========================================
# Model Configuration
# ===========================================
MODEL_TEMPERATURE=0.7
MODEL_NAME=gemini-1.5-pro-latest

# ===========================================
# Application Configuration
# ===========================================
LOG_LEVEL=INFO
ADK_HOST=0.0.0.0
ADK_PORT=8080

# ===========================================
# TeX Live and TikZ Validation Configuration
# ===========================================
# Enable/disable TeX Live functionality
TEXLIVE_ENABLED=true
TIKZ_VALIDATION_ENABLED=true

# LaTeX compiler settings
LATEX_COMPILER=pdflatex
TEX_MAX_COMPILATION_TIME=30

# TikZ validation loop settings
MAX_VALIDATION_ATTEMPTS=3
VALIDATION_TIMEOUT=60

# ===========================================
# Physics Diagram Configuration
# ===========================================
# Default TikZ libraries to load
TIKZ_DEFAULT_LIBRARIES=positioning,arrows.meta,decorations.markings,calc

# Feynman diagram specific settings
FEYNMAN_DIAGRAM_ENABLED=true
PHYSICS_PACKAGES=physics,amsmath,amssymb

# ===========================================
# Development Configuration
# ===========================================
# Set to true for development mode
DEBUG_MODE=false
HOT_RELOAD=false

# Development port (when running in dev profile)
DEV_PORT=40000

# ===========================================
# Performance and Resource Configuration
# ===========================================
# Memory limits for LaTeX compilation
MAX_MEMORY_MB=1024

# Temporary directory for compilation
TEMP_DIR=/tmp/tikz-compile

# Cache settings
ENABLE_COMPILATION_CACHE=true
CACHE_MAX_SIZE_MB=100

# ===========================================
# Security Configuration
# ===========================================
# Allowed file extensions for uploads
ALLOWED_EXTENSIONS=tex,tikz,pdf

# Maximum file size for uploads (MB)
MAX_FILE_SIZE_MB=10

# ===========================================
# Logging Configuration
# ===========================================
# Log file location
LOG_FILE=/app/logs/feynmancraft.log

# Log rotation settings
LOG_MAX_SIZE_MB=50
LOG_BACKUP_COUNT=5

# ===========================================
# Advanced LaTeX Configuration
# ===========================================
# Additional LaTeX packages to preload
ADDITIONAL_PACKAGES=xcolor,graphicx,subcaption,booktabs

# Custom LaTeX preamble additions
CUSTOM_PREAMBLE=

# Error handling mode
LATEX_ERROR_MODE=nonstopmode

# ===========================================
# Monitoring and Health Check Configuration
# ===========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# Metrics collection
ENABLE_METRICS=false
METRICS_PORT=9090 